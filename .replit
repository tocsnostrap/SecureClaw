entrypoint = "src/moltbot/server.ts"
modules = ["nodejs-22"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "npm install"]
run = ["npx", "tsx", "src/moltbot/server.ts"]

[[ports]]
localPort = 5000
externalPort = 80

[env]
PORT = "5000"

[workflows]
runButton = "Moltbot"

[[workflows.workflow]]
name = "Moltbot"
author = "agent"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx src/moltbot/server.ts"
waitForPort = 5000
