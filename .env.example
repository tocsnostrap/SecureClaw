# ============================================
# SECURECLAW STAGE 2 CONFIGURATION
# ============================================
# Copy this file to .env and fill in your credentials

# ============================================
# CORE CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000
GATEWAY_PORT=18789

# Session secret for OAuth
SESSION_SECRET=your_session_secret_here_min_32_characters

# SecureClaw auth token for gateway (generate a long random string)
SECURECLAW_AUTH_TOKEN=secureclaw_your_token_here_min_32_characters

# Timezone for cron jobs
TIMEZONE=America/New_York

# Enable cron tasks (true/false)
ENABLE_CRON=true
ENABLE_MARKET_MONITOR=false
ENABLE_DAILY_SUMMARY=false
ENABLE_AI_REFLECTION=false

# ============================================
# AI CONFIGURATION - xAI Grok
# ============================================
XAI_API_KEY=your_xai_api_key_here
GROK_MAX_TOKENS=4096

# ============================================
# DATABASE (PostgreSQL - Optional)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/secureclaw
DATABASE_PASSWORD=changeme

# ============================================
# FIREBASE FCM - Push Notifications
# ============================================
# Option 1: Path to service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase-service-account.json

# Option 2: Service account JSON as environment variable (entire JSON string)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# ============================================
# TELEGRAM INTEGRATION
# ============================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# WHATSAPP INTEGRATION - Twilio
# ============================================
# Get credentials from twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ============================================
# OAUTH CREDENTIALS - App Integrations
# ============================================

# Instagram (via Facebook Graph API)
# Get from: https://developers.facebook.com/apps
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Google (Gmail, Calendar, etc.)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Twitter (via OAuth 2.0)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# OAuth redirect URI (your domain)
OAUTH_REDIRECT_URI=https://yourdomain.com/api/oauth/callback

# ============================================
# PERMISSIONS & ENCRYPTION
# ============================================
# 32-character encryption key for storing credentials
PERMISSIONS_KEY=your_32_char_encryption_key_here

# ============================================
# REPLIT CONFIGURATION (if deploying on Replit)
# ============================================
# These are auto-set by Replit
# REPL_ID=
# REPLIT_DEV_DOMAIN=
# REPLIT_DOMAINS=

# ============================================
# VPS/PRODUCTION DEPLOYMENT
# ============================================
# Domain name for SSL/HTTPS
DOMAIN=secureclaw.example.com

# Email for Let's Encrypt SSL certificates
SSL_EMAIL=admin@example.com

# ============================================
# OPTIONAL INTEGRATIONS
# ============================================

# Brokerage API (e.g., Alpaca for trading)
# ALPACA_API_KEY=your_alpaca_api_key
# ALPACA_SECRET_KEY=your_alpaca_secret_key
# ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Other APIs
# OPENWEATHER_API_KEY=your_openweather_api_key
# NEWS_API_KEY=your_news_api_key

# ============================================
# MONITORING & LOGGING
# ============================================
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Expo development
# EXPO_PUBLIC_DOMAIN=localhost:5000
# EXPO_PACKAGER_PROXY_URL=http://localhost:5000
# REACT_NATIVE_PACKAGER_HOSTNAME=localhost
